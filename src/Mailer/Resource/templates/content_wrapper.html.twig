{% extends '@mailer/base.html.twig' %}

{% set border = 0 %}

{% set icon_website_base64_svg = "" %}
{% set icon_twitter_base64_svg =  "" %}
{% set icon_instagram_base64_svg =  "" %}

{% block style %}
    <style>
        html, body {
            background-color: #F9F9F9;
        }

        html, body, * {
            font-family: 'Montserrat', Verdana, sans-serif;
            text-align: center;
        }

        table {
            border-collapse: collapse;
        }

        .headline {
            background-color: #334155;
            padding: 20px 20px 20px 20px;
            color: #F9F9F9;
            font-size: 1.5em;
        }

        .subject {
            text-align: center;
            padding: 25px 25px 25px 25px;
            text-transform: uppercase;
        }

        .main-content {
            text-align: center;
            padding: 20px 20px 20px 20px;
            color: #6c757d;
            font-size: 1em;
        }

        .footer {
            padding: 10px 15px 10px 15px;
            font-size: 12px;
            background-color: #334155;
            color: white;
        }

        .copyright {
            padding: 5px 15px 5px 15px;
            background-color: #334155;
        }
        .copyright a {
            color: white;
            font-size: 14px;
            text-decoration: none;
        }

        .social {
            padding: 20px 0px 20px 0px;
            background-color: #334155;
        }

        .social img {
            margin: 0px 20px 0px 20px;
            color: white;
        }

        .social a {
            text-decoration: none;
        }
    </style>
{% endblock %}

{% block content %}

    <table border="{{ border }}" cellspacing="0" cellpadding="0" width="100%">
        <tr>
            <td>
                <table border="{{ border }}" cellspacing="0" cellpadding="0" width="600" align="center">

                    <tr>
                        <td class="headline">
                            {% block headline %}
                                MADE
                            {% endblock %}
                        </td>
                    </tr>

                    <tr>
                        <td class="subject">
                            {% block subject %}
                                {{ email.subject|default('no subject specified') }}
                            {% endblock %}
                        </td>
                    </tr>

                    <tr>
                        <td colspan="2" class="main-content">
                            {% block body %}
                                No body specified.
                            {% endblock %}
                        </td>
                    </tr>

                    <tr>
                        <td colspan="2" class="social">
                            <table border="{{ border }}" cellspacing="0" cellpadding="0" width="100%">
                                <tr>
                                    <td>

                                        {# ToDo: Add a hardlink to the below images #}
                                        <a href="https://made.dev" target="_blank">
                                            <img height="20px" alt="Website"
                                                 src="data:image/svg+xml;base64,{{ icon_website_base64_svg }}">
                                        </a>
                                        <a href="https://twitter.com/made_dot_dev" target="_blank">
                                            <img height="20px" alt="Twitter"
                                                 src="data:image/svg+xml;base64,{{ icon_twitter_base64_svg }}">
                                        </a>
                                        <a href="https://instagram.com/made_dot_dev" target="_blank">
                                            <img height="20px" alt="Instagram"
                                                 src="data:image/svg+xml;base64,{{ icon_instagram_base64_svg }}">
                                        </a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <tr>
                        <td colspan="2" class="footer">
                            {% block footer_text_before %}
                            {% endblock %}
                            {% block footer_text %}
                                This is an automatically sent e-mail. <br>
                                Please do not reply to this message, as the e-mail address is not set up to receive e-mails.
                            {% endblock %}
                            {% block footer_text_after %}
                            {% endblock %}
                        </td>
                    </tr>

                    <tr>
                        <td colspan="2" class="copyright">
                            {% block copyright %}
                                <a href="https://made.dev">Â© 2020 Made</a>
                            {% endblock %}
                        </td>
                    </tr>

                </table>
            <td>
        <tr>
    </table>
{% endblock %}
