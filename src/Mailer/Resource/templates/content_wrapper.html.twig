{% extends '@mailer/base.html.twig' %}

{% set border = 0 %}

{% block style %}
    <style>
        html, body, * {
            font-family: Arial, sans-serif;
            background-color: #F9F9F9;
            text-align: center;
        }

        table {
            border-collapse: collapse;
        }

        .headline {
            background-color: #334155;
            padding: 20px;
            color: #F9F9F9;
            font-size: 1.5em;
        }

        .subject {
            text-align: center;
            padding: 25px;
            text-transform: uppercase;
        }

        .main-content {
            text-align: center;
            padding: 20px;
            color: #6c757d;
            font-size: 1em;
        }

        .huge-title {
            font-size: 2em;
        }

        .footer {
            padding: 10px 5px 10px 5px;
            font-family: Arial, sans-serif;
            font-size: 12px;
        }

        .social img {
            padding: 10px 20px;
        }
    </style>
{% endblock %}

{% block content %}

    <table cellspacing="0" cellpadding="0" width="100%">
        <tr>
            <td>
                <table cellspacing="0" cellpadding="0" width="600" align="center">

                    <tr>
                        <td class="headline">
                            {% block headline %}
                                Made Blog
                            {% endblock %}
                        </td>
                    </tr>

                    <tr>
                        <td class="subject">
                            {% block subject %}
                                Subject of the email
                            {% endblock %}
                        </td>
                    </tr>

                    <tr>
                        <td colspan="2" class="main-content">
                            <table cellspacing="0" cellpadding="0" width="100%">
                                <tr>
                                    <td><i>some nice image should be displayed here</i> <br></td>
                                </tr>
                                <tr>
                                    <td class="huge-title">
                                        You are almost subscribed!
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        {% block content_mail %}
                                            your registration code is {{ code }}.
                                        {% endblock %}
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <tr>
                        <td colspan="2" class="social">
                            <table border="1" cellspacing="0" cellpadding="0" width="100%">
                                <tr>
                                    <td> </td>
                                    <td>
                                        <a href="https://made.dev" target="_blank"><img height="20px" src="/globe-solid.png"></a>
                                        <a href="https://twitter.com/made_dot_dev" target="_blank"><img height="20px" src="/twitter-brands.png"></a>
                                        <a href="https://instagram.com/made_dot_dev" target="_blank"><img height="20px" src="/instagram-brands.png"></a>
                                    </td>
                                    <td></td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <tr>
                        <td colspan="2"
                            class="footer">
                            {% block footer %}
                                Please do not respond as this address does not accept email and you won't get a response.
                            {% endblock %}

                        </td>
                    </tr>

                    <tr>
                        <td colspan="2" class="copyright">
                            {% block copyright %}
                                Â© 2020 Made
                            {% endblock %}
                        </td>
                    </tr>

                </table>
            <td>
        <tr>
    </table>
{% endblock %}
