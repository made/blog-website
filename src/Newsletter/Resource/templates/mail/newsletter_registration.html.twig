{% extends '@mailer/content_wrapper.html.twig' %}

{% set smile_icon_base64_svg = "" %}

{% block headline %}
    MADE BLOG
{% endblock %}

{% block body %}
    <table border="{{ border }}" cellspacing="0" cellpadding="0" width="100%">

        <tr>
            <td>
                <img height="90px" alt="Smiley" src="data:image/svg+xml;base64,{{ smile_icon_base64_svg }}">
            </td>
        </tr>

        <tr>
            <td style="padding: 15px 0px 15px 0px; font-size: 24px;">
                You are almost subscribed!
            </td>
        </tr>

        <tr>
            <td style="padding: 10px 0px 10px 0px">
                Your registration code is
                <div style="font-weight: bold; font-size: 32px;">{{ code }}</div>
            </td>
        </tr>

        <tr>
            <td style="padding: 10px 0px 10px 0px">
                You can also activate your email by clicking the below link. <br>
                If you are not able to click this link, you can also copy and paste it into your browser. <br> <br>
                <a href="{{ activationUrl }}">
                    {{ activationUrl }}
                </a>
            </td>
        </tr>

    </table>
{% endblock %}